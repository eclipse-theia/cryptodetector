{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "plugins": [
    "@typescript-eslint",
    "@typescript-eslint/tslint"
  ],
  "ignorePatterns": [
    "node_modules",
    "*.d.ts"
  ],
  "rules": {
    "semi": "error",
    "no-extra-semi": "warn",
    "curly": "warn",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "eqeqeq": [
      "error",
      "smart"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-var": "error",
    "no-void": "error",
    "one-var": [
      "error",
      "never"
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": [
          "*",
          "+",
          "-",
          "/"
        ]
      }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ],
    "@typescript-eslint/quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "@typescript-eslint/tslint/config": [
      "error",
      {
        "rules": {
          "file-header": [
            true,
            "SPDX-License-Identifier: EPL-2\\.0 OR GPL-2\\.0 WITH Classpath-exception-2\\.0"
          ],
          "jsdoc-format": [
            true,
            "check-multiline-start"
          ],
          "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
          ],
          "typedef": [
            true,
            "call-signature",
            "property-declaration"
          ],
          "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
          ]
        }
      }
    ]
  }
}
